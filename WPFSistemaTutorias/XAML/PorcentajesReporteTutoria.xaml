        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSistemaTutorias.Diana"
        mc:Ignorable="d"
        Title="Porcentajes Reporte Tutoria" Height="249" Width="418">
    <Grid Height="NaN" Width="NaN" Margin="0,0,0,-26">

