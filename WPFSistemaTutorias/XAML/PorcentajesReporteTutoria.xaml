        <Label x:Name="lbAsistencia" Content="" HorizontalAlignment="Left" Margin="149,52,0,0" VerticalAlignment="Top" Width="170"/>
        <Label x:Name="lbRiesgo" Content="" HorizontalAlignment="Left" Margin="149,92,0,0" VerticalAlignment="Top" Width="170"/>

    </Grid>
